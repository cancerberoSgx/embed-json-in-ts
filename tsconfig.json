{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution":"node",
    "lib": [
      "es2018"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include":["src"],
  "exclude": ["spec", "dist", "node_modules"]
}